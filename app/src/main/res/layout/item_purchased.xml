<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_item_purchased_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="1 " />

    <TextView
        android:id="@+id/tv_label_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/tv_item_purchased_qty"
        android:layout_toRightOf="@+id/tv_item_purchased_qty"
        android:text="X" />

    <TextView
        android:id="@+id/tv_item_purchased_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_toEndOf="@+id/tv_label_qty"
        android:layout_toRightOf="@+id/tv_label_qty"
        android:gravity="end"
        android:text="buku"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/tv_item_purchased_label_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="end"
        android:text="Price / 1 = "
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/tv_item_purchased_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_item_purchased_label_price"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/tv_item_purchased_label_price"
        android:layout_toRightOf="@+id/tv_item_purchased_label_price"
        android:text="2000" />
</RelativeLayout>