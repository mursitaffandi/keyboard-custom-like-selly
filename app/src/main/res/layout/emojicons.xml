<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/emojis_tab"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/emojis_tab_0_recents"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/selector_emoji_recent" />


        <ImageButton
            android:id="@+id/emojis_tab_1_people"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/selector_emoji_people" />

        <ImageButton
            android:id="@+id/emojis_tab_2_nature"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/selector_emoji_nature" />


        <ImageButton
            android:id="@+id/emojis_tab_3_food"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/selector_emoji_food" />


        <ImageButton
            android:id="@+id/emojis_tab_4_sport"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/selector_emoji_activity" />


        <ImageButton
            android:id="@+id/emojis_tab_5_cars"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/selector_emoji_travel" />


        <ImageButton
            android:id="@+id/emojis_tab_6_elec"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/selector_emoji_objects" />


        <ImageButton
            android:id="@+id/emojis_tab_7_sym"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/selector_emoji_symbols" />


        <ImageButton
            android:id="@+id/emojis_backspace"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/emoji_x" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/emojis_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@id/emojis_tab"
        android:layout_marginBottom="50dip"
        android:layout_marginTop="50dip"
        android:background="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:background="@color/colorLightGrey">

        <ImageButton
            android:id="@+id/btnBackEmoji"
            android:layout_width="60dip"
            android:layout_height="match_parent"
            android:background="@color/colorLightGrey"
            android:src="@drawable/ic_navigate_before_white_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Jokumoji"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/emojis_tab"
        android:background="#ffffff" />
</RelativeLayout>